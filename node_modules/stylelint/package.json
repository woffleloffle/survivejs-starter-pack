{
  "name": "stylelint",
  "version": "4.5.1",
  "description": "Modern CSS linter",
  "keywords": [
    "css",
    "csslint",
    "lint",
    "linter",
    "stylelint"
  ],
  "authors": [
    "David Clark",
    "Maxime Thirouin",
    "Richard Hallows"
